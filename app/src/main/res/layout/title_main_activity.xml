<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/load_prev_btn"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="load_prev_image"
        android:src="@drawable/ic_left" />

    <LinearLayout
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_bar_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/swipe_for_more"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_bar_small_text_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/load_next_btn"
        android:layout_width="@dimen/title_bar_icon_size"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="load_next_image"
        android:src="@drawable/ic_right" />

</RelativeLayout>