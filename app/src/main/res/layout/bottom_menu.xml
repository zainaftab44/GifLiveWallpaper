<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_menu"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/btn_bottom_menu"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_tick"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:text="@string/apply"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/btn_bottom_menu"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_back"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/btn_bottom_menu"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_gear"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:text="@string/settings"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/btn_bottom_menu"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_bulb"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:text="@string/feedback"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/btn_bottom_menu"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_heart"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:text="@string/review"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/btn_bottom_menu"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_more"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:text="@string/more"
            android:textColor="@android:color/white" />
    </LinearLayout>
</FrameLayout>
